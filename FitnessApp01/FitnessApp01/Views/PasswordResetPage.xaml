<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp01.Views.PasswordResetPage"
             xmlns:vms="clr-namespace:FitnessApp01.ViewModels"
             xmlns:resources="clr-namespace:FitnessApp01.Resx"
             Shell.NavBarIsVisible="True"
             Shell.FlyoutBehavior="Disabled"
             
             Title="{Static resources:AppResources.ResetPassword}">

    <ContentPage.BindingContext>
        <!--nastavení viewmodelu-->
        <vms:LoginPageViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Margin="20,40,20,20">
            <Label Text="{Static resources:AppResources.PasswordResetPage_email}"
                   Style="{StaticResource primaryText}"
                   FontAttributes="Bold"
                   FontSize="Medium">
            </Label>
            <Entry Placeholder="email"
                   Keyboard="Email" ClearButtonVisibility="WhileEditing"
                   Text="{Binding ResetEmail}">
            </Entry>
            <Button Text="{Static resources:AppResources.PasswordResetPage_send}"
                    Style="{StaticResource primaryButton}"
                    VerticalOptions="EndAndExpand"
                    Command="{Binding ActualPasswordResetCommand}">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>